{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AppSettings": {
    "system": {
      "appName": "mtApiClient",
      "version": "0.0.0",
      "log_level": "Info",
      "variable_file": "vars.json",
      "buffer_size": 1000000

    },
    "app": {
      "client": "client1",
      "api_host": "192.168.1.41",
      "api_suffix": "api/v1",
      "api_protocol": "http",
      "api_port": "5236",
      "time_period": "1000",
      "webhook_level" : "debug",
      "on_time": "0",
      "off_time": "0",
      "interleave": 1
    },
    "env": {
      "client": "CLIENT",
      "api_host": "API_HOST",
      "api_suffix": "API_SUFFIX",
      "api_protocol": "API_PROTOCOL",
      "api_port": "API_PORT",
      "time_period": "TIME_PERIOD",
      "on_time": "ON_TIME",
      "off_time": "OFF_TIME",
      "interleave": "INTERLEAVE"
    },
    "misc": {
      "retry_time": 5000,
      "dequeue_loop_time": 1000
    },
    "api": {
      "set_connection": {
          "command": "Connection",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "get_all_connections": {
          "command": "Connection",
          "operation": "GET",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      }, 
      "delete_connection": {
          "command": "Connection",
          "operation": "DELETE",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": false
      },
      "get_subscriptions": {
          "command": "Subscriptions",
          "operation": "GET",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "delete_subscription": {
          "command": "Subscriptions",
          "operation": "DELETE",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "set_subscription": {
          "command": "Subscriptions",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      }, 
      "set_publication": {
          "command": "Publications",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "set_subscription_read": {
          "command": "Subscriptions/Read",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true 
