{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AppSettings": {
    "system": {
      "version": "0.0.0",
      "variable_file": "vars.json"

    },
    "app": {
      "client": "client1",
      "api_host": "192.168.1.41",
      "api_suffix": "api/v1",
      "api_protocol": "http",
      "api_port": "5236",
      "time_period": "1000",
      "webhook_host": "0.0.0.0",
      "webhook_protocol": "http",
      "webhook_suffix": "/webhook/v1/",
      "webhook_port": "8100",
      "webhook_level" : "debug",
      "on_time": "1000",
      "off_time": "1000"
    },
    "env": {
      "client": "CLIENT",
      "api_host": "API_HOST",
      "api_suffix": "API_SUFFIX",
      "api_protocol": "API_PROTOCOL",
      "api_port": "API_PORT",
      "time_period": "TIME_PERIOD",
      "webhook_host": "WH_HOST",
      "webhook_suffix": "WH_SUFFIX",
      "webhook_protocol": "WH_PROTOCOL",
      "webhook_port": "WH_PORT",
      "on_time": "ON_TIME",
      "off_time": "OFF_TIME"
    },
    "misc": {
      "retry_time": 5000,
      "dequeue_loop_time": 1000
    },
    "api": {
      "set_connection": {
          "command": "Connection",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "get_all_connections": {
          "command": "Connection",
          "operation": "GET",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      }, 
      "delete_connection": {
          "command": "Connection",
          "operation": "DELETE",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": false
      },
      "get_subscriptions": {
          "command": "Subscriptions",
          "operation": "GET",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "delete_subscription": {
          "command": "Subscriptions",
          "operation": "DELETE",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "set_subscription": {
          "command": "Subscriptions",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      }, 
      "set_publication": {
          "command": "Publications",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      },
      "set_subscription_read": {
          "command": "Subscriptions/Read",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true 
      },
      "set_publication_publish": {
          "command": "Publications/Publish",
          "operation": "POST",
          "header_type": "Content-Type",
          "header": "application/json",
          "response_required": true
      }
    },
    "parameters": {
      "threadpool_min_size": 128
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "path" : "/tmp/logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}][{Level:u4}] {SourceContext} {Message:1j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
